
@{
    ViewBag.Title = "PagoEfectuado";
    Layout = "~/Views/Shared/_LayoutProductos.cshtml";
}


<div class="row">
    <div class="col-sm-12 text-center">
        <br /><br />
        @{
            if ((bool)ViewData["Status"])
            {
                <h1 class="text-success">Gracias!</h1>
                <br />
                <i class="far fa-check-circle fa-9x text-success"></i>
                <br />
                <h2 class="text-success">Su pago fue realizado con éxito</h2>
                <h4> ID de Transacción : @ViewData["idTransaccion"]</h4>
            }
            else
            {
                <h1 class="text-danger">Lo sentimos!</h1>
                <br />
                <i class="fas fa-exclamation-circle fa-9x text-danger"></i>
                <br />
                <h2 class="text-danger">Su pago no pudo ser realizado</h2>                
            }

            <br />
            <a class="btn btn-primary" href="@Url.Action("Ventas", "Ventas")"><i class="fa fa-arrow-left"></i> Volver a la Tienda</a>

        }

    </div>

</div>
