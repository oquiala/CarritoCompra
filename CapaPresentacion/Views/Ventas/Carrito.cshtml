
@{
    ViewBag.Title = "Carrito";
    Layout = "~/Views/Shared/_LayoutProductos.cshtml";
}

<div class="container my-5">
    <div class="row mb-5">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-9">
                            <div class="me-2">
                                <div class="d-flex justify-content-between">
                                    <h5 class="ms-2 mt-2">Detalle del carrito</h5>
                                    <a class="btn btn-primary" href="@Url.Action("Ventas", "Ventas")">
                                        <i class="fas fa-cart-plus"></i> Seguir Comprando
                                    </a>
                                </div>
                                <hr class="mt-2 mb-2">

                                <div id="productos-carrito">               
                                </div>

                                <div class="d-flex justify-content-end">
                                    <label class="aling-self-center"> <b>Total: <span id="total"> </span></b></label>
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="card">
                                <div class="card-body bg-light">
                                    <h5 class="card-title mb-3">Detalle del envío</h5>
                                    <form>
                                        <div class="mb-2">
                                            <label for="contacto" class="form-label">Nombre de contacto:</label>
                                            <input type="text" class="form-control form-control-sm" id="txtContacto">
                                        </div>
                                        <div class="mb-2">
                                            <label for="direccion" class="form-label">Dirección:</label>
                                            <input type="text" class="form-control form-control-sm" id="txtDireccion">
                                        </div>
                                        <div class="mb-2">
                                            <label for="distrito" class="form-label">Distrito:</label>
                                            <input type="text" class="form-control form-control-sm" id="txtDistrito">
                                        </div>
                                        <div class="mb-2">
                                            <label for="telefono" class="form-label">Teléfono:</label>
                                            <input type="text" class="form-control form-control-sm" id="txtTelefono">
                                        </div>
                                        <div class="d-grid">
                                            <button class="btn btn-success mt-3" type="button" onclick="RealizarPago()">
                                                <i class="fab fa-paypal"></i> Procesar pago
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        $(document).ready(function () {
            jQuery.ajax({
                url: '@Url.Action("ListarCarrito", "Ventas")',
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#productos-carrito").html("");
                    $("#productos-carrito").LoadingOverlay("hide");

                    $.each(data.data, function (i, item) {
                        $("<div>").addClass("card mb-2 card-producto").append(
                            $("<div>").addClass("card-body").append(
                                $("<div>").addClass("row align-items-center").append(
                                    $("<div>").addClass("col-sm-2 aling-self-center d-flex justify-content-center").append(
                                        $("<img>").addClass("rounded").attr({ "src": "data:image/" + item.oProducto.Extension + ";base64," + item.oProducto.Base64 })
                                            .css({ "width": "100px", "height": "100px" })
                                    ),
                                    $("<div>").addClass("col-sm-4 aling-self-center").append(
                                        $("<span>").addClass("font-weight-bold d-block").text(item.oProducto.oMarca.Descripcion),
                                        $("<span>").text(item.oProducto.Nombre)
                                    ),
                                    $("<div>").addClass("col-sm-2 aling-self-center").append(
                                        $("<span>").text(item.oProducto.Precio.toFixed(2) + " USD")
                                    ),
                                    $("<div>").addClass("col-sm-2 aling-self-center").append(
                                        $("<div>").addClass("d-flex").append(
                                            $("<button>").addClass("btn btn-outline-secondary btn-restar rounded-0").append($("<i>").addClass("fas fa-minus")),
                                            $("<input>").addClass("form-control input-cantidad p-1 text-center rounded-0").attr({ "disabled": "disabled" })
                                                .css({ "width": "40px" }).data("oProducto", item.oProducto).val(item.Cantidad),
                                            $("<button>").addClass("btn btn-outline-secondary btn-sumar rounded-0").append($("<i>").addClass("fas fa-plus"))
                                        )
                                    ),
                                    $("<div>").addClass("col-sm-2 aling-self-center").append(
                                        $("<button>").addClass("btn btn-outline-danger btn-eliminar").append(
                                            $("<i>").addClass("fas fa-trash-alt"), " Eliminar"
                                        ).data("IdProducto", item.oProducto.IdProducto)
                                    )
                                )
                            )
                        ).appendTo("#productos-carrito")
                    })
                    sumaTotal()
                },
                beforeSend: function () {
                    $("#productos-carrito").LoadingOverlay("show")
                },
            })
        })


        function sumaTotal() {
            var sumaTotal = parseFloat(0)
            $("input.input-cantidad").each(function (i) {
                var precio = $(this).data("oProducto").Precio
                var cantidad = parseFloat($(this).val())
                var subTotal = precio * cantidad
                sumaTotal += subTotal
            });
            $("#total").text(sumaTotal.toFixed(2));
            $("#total").data("sumaTotal", sumaTotal);
        }


        $(document).on("click", ".btn-sumar", function () {
            var divContenedor = $(this).parent("div.d-flex")
            var inputCantidad = $(divContenedor).find("input.input-cantidad")
            var btn = $(this)
            var idProducto = $(inputCantidad).data("oProducto").IdProducto

             jQuery.ajax({
                url: '@Url.Action("OperacionCarrito", "Ventas")',
                type: "POST",
                data: JSON.stringify({ idProducto: idProducto, sumar: true }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                 success: function (data) {
                     $(btn).LoadingOverlay("hide")
                     if (data.respuesta) {
                         var cantidad = parseInt($(inputCantidad).val()) + 1
                         $(inputCantidad).val(cantidad)
                         sumaTotal()
                     } else {
                         swal({
                             title: "",
                             text: data.mensaje,
                             type: "warning",
                             showConfirmButton: false,
                             timer: 1500
                         })
                     }

                 },
                 beforeSend: function () {
                     $(btn).LoadingOverlay("show")
                 },
                 error: function (error) {
                     console.log(error)
                     $(btn).LoadingOverlay("hide")
                 },
             })
        })


        $(document).on("click", ".btn-restar", function () {
            var divContenedor = $(this).parent("div.d-flex")
            var inputCantidad = $(divContenedor).find("input.input-cantidad")
            var btn = $(this)
            var idProducto = $(inputCantidad).data("oProducto").IdProducto
            var cantidad = parseInt($(inputCantidad).val()) - 1

            if (cantidad > 0) {
                jQuery.ajax({
                url: '@Url.Action("OperacionCarrito", "Ventas")',
                type: "POST",
                data: JSON.stringify({ idProducto: idProducto, sumar: false }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $(btn).LoadingOverlay("hide")
                    if (data.respuesta) {

                        $(inputCantidad).val(cantidad)
                        sumaTotal()
                    } else {
                        swal({
                            title: "",
                            text: data.mensaje,
                            type: "warning",
                            showConfirmButton: false,
                            timer: 1500
                        })
                    }

                },
                beforeSend: function () {
                    $(btn).LoadingOverlay("show")
                },
                error: function (error) {
                    console.log(error)
                    $(btn).LoadingOverlay("hide")
                }
             })
            }
        })


        $(document).on("click", ".btn-eliminar", function () {

            var idProducto = $(this).data("IdProducto")
            var cardProducto = $(this).parents("div.card-producto")

            jQuery.ajax({
                url: '@Url.Action("EliminarCarrito", "Ventas")',
                type: "POST",
                data: JSON.stringify({ idProducto: idProducto }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    if (data.respuesta) {

                        cardProducto.remove()
                        CantidadCarrito()
                        sumaTotal()

                    } else {
                        swal({
                            title: "",
                            text: data.mensaje,
                            type: "warning",
                            showConfirmButton: false,
                            timer: 1500
                        })
                    }

                }
            })

        })


        function RealizarPago() {
            if (parseInt($("#cantidadCarrito").text()) == 0) {

                swal({
                    title: "Atención!",
                    text: "No existen productos en el carrito",
                    type: "warning",
                    showConfirmButton: false,
                    timer: 2500,
                    showCancelButton: true,
                    cancelButtonClass: "btn-danger",
                    cancelButtonText: "Cerrar",
                });
                return
            }

            if ($("#txtDistrito").val() == "" || $("#txtContacto").val() == "" || $("#txtDireccion").val() == "" || $("#txtTelefono").val() == "") {

                swal({
                    title: "Atención!",
                    text: "Debe completar los datos del envío",
                    type: "warning",
                    showConfirmButton: false,
                    timer: 2500,
                    showCancelButton: true,
                    cancelButtonClass: "btn-danger",
                    cancelButtonText: "Cerrar",
                });
                return
            }

            var venta = {
                TotalProducto : $("input.input-cantidad").length,
                MontoTotal : 0,
                Contacto : $("#txtContacto").val(),
                IdDistrito : $("#txtDistrito").val(),
                Telefono : $("#txtTelefono").val(),
                Direccion : $("#txtDireccion").val()
            }


            var listaCarrito = []

            $("input.input-cantidad").each(function (i) {
                var producto = $(this).data("oProducto")
                var cantidad = parseFloat($(this).val())
                listaCarrito.push({
                    oProducto: producto,
                    Cantidad: cantidad
                })
            })

            jQuery.ajax({
                url: '@Url.Action("ProcesarPago", "Ventas")',
                type: "POST",
                data: JSON.stringify({ listaCarrito: listaCarrito, oVenta: venta }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    $.LoadingOverlay("hide")

                    if (data.Status) {
                        window.location.href = data.Link
                    } else {
                        swal({
                            title: "No se pudo realizar el pago!",
                            text: "Vuelva a intentarlo más tarde",
                            type: "warning",
                            showConfirmButton: false,
                            timer: 2500,
                            showCancelButton: true,
                            cancelButtonClass: "btn-danger",
                            cancelButtonText: "Cerrar",
                        });
                    }


                 },
                 beforeSend: function () {
                     $.LoadingOverlay("show")
                 },
                 error: function (error) {
                     console.log(error)
                     $.LoadingOverlay("hide")
                 }
             })


        }


    </script>        
}
        

