
@{
    ViewBag.Title = "Producto";
}

<h2 class="mt-4">Productos</h2>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Productos</li>
</ol>

<div class="card">
    <div class="card-header"> <i class="fas fa-boxes me-1"></i> Productos</div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Nuevo</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Marca</th>
                    <th>Categoría</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="lblModal" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="lblModalTitle">Crear Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="abrirModal(null)"></button>
            </div>
            <div class="modal-body">

                <input type="hidden" id="txtIdProducto" value="0">

                <form class="row" id="contenedor">
                    <div class="col-sm-3">
                        <div class="mb-2">
                            <img id="imgProducto" height="190" width="255" class="border rounded mx-auto d-block img-fluid">
                        </div>
                        <div class="mb-2">
                            <input type="file" class="form-control" id="fileProducto" accept="image" onchange="mostrarImagen(this)">
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-2">
                            <label for="txtNombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="txtNombre" name="nombre">
                        </div>
                        <div class="mb-2">
                            <label for="txtDescripcion" class="form-label">Descripción</label>
                            <textarea type="text" class="form-control" id="txtDescripcion" name="descripcion" style="height:125px;resize:none"></textarea>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-2">
                            <label for="txtMarca" class="form-label">Marca</label>
                            <select id="cbMarca" class="form-select">
                            </select>
                        </div>
                        <div class="mb-2">
                            <label for="txtCategoria" class="form-label">Categoría</label>
                            <select id="cbCategoria" class="form-select">
                            </select>
                        </div>
                        <div class="mb-2">
                            <input class="form-check-input" type="checkbox" value="" id="checkActivo">
                            <label class="form-check-label" for="checkActivo">Activo</label>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-2">
                            <label for="txtPrecio" class="form-label">Precio</label>
                            <input type="text" class="form-control" id="txtPrecio" name="precio">
                        </div>
                        <div class="mb-2">
                            <label for="txtStock" class="form-label">Stock</label>
                            <input type="number" class="form-control" id="txtStock" name="stock">
                        </div>
                    </div>

                    <div class="col-sm-12 mt-3">
                        <div id="msjeError" class="alert alert-danger" role="alert"></div>
                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var tabladata;
        var fila = null;

        function mostrarImagen(input) {
            if (input.files) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $("#imgProducto").attr("src", e.target.result).width(255).height(190);
                }
                reader.readAsDataURL(input.files[0])
            }
        }

        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListaProducto", "Producto")',
                type: "Get",
                dataType: "json"
            },
            "columns": [
                { "data": "IdProducto" },
                { "data": "Nombre" },
                { "data": "Descripcion" },
                { "data": "oMarca.Descripcion" },
                { "data": "oCategoria.Descripcion" },
                { "data": "Precio" },
                { "data": "Stock" },
                {
                    "data": "Activo", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">SI</span>'
                        } else {
                            return '<span class="badge bg-danger">NO</span>'
                        }
                    }
                },
                {
                    "defaultContent":
                        '<button type="button" class="btn btn-primary btn-sm btn-edit"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-delete"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "80px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json"
            }
        });

        function abrirModal(data) {

            $(".modal-body").LoadingOverlay("hide");

            $("#txtIdProducto").val(0);
            $("#imgProducto").removeAttr("src");
            $("#fileProducto").val("");
            $("#txtNombre").val("");
            $("#txtDescripcion").val("");
            $("#cbMarca").val($("#cbMarca option:first").val());
            $("#cbCategoria").val($("#cbCategoria option:first").val());
            $("#txtPrecio").val("");
            $("#txtStock").val("");
            $("#checkActivo").val(false);

            $("#msjeError").hide();
            $("#lblModalTitle").text("Crear Producto");

            if (data != null) { //EDITAR
                $("#txtIdProducto").val(data.IdProducto);
                $("#txtNombre").val(data.Nombre);
                $("#txtDescripcion").val(data.Descripcion);
                $("#cbMarca").val(data.oMarca.IdMarca);
                $("#cbCategoria").val(data.oCategoria.IdCategoria);
                $("#txtPrecio").val(data.Precio);
                $("#txtStock").val(data.Stock);
                $("#checkActivo").val(data.Activo);

                $("#lblModalTitle").text("Editar Producto");                              

                jQuery.ajax({
                    url: '@Url.Action("ImagenProducto", "Producto")',
                    type: "POST",
                    data: JSON.stringify({ id: data.IdProducto }),
                    dataType:"json",
                    contentType: "application/json; charset=utf-8",
                    success: function (resp) {
                        $("#imgProducto").LoadingOverlay("hide")
                        if (resp.conversion) {
                            $("#imgProducto").attr({ "src": "data:image/" + resp.extension + ";base64," + resp.textoBase64 })                            
                        }                        
                    },
                    error: function (error) {
                        $("#imgProducto").LoadingOverlay("hide")
                        $("#msjeError").show()
                        $("#msjeError").text("Ocurrió un error al mostrar la imagen")
                    },
                    beforeSend: function () {
                        $("#imgProducto").LoadingOverlay("show")
                    }
                });



            }

            $("#FormModal").modal("show");
        }

        $("#tabla tbody").on("click", '.btn-edit', function () {
            fila = $(this).closest("tr");
            abrirModal(tabladata.row(fila).data());
        });

        $("#tabla tbody").on("click", '.btn-delete', function () {
            fila = $(this).closest("tr");
            Delete(tabladata.row(fila).data());
        });

        function Guardar() {

            if (!$("#contenedor").valid()) {
                return;
            }

            var imgSeleccionada = $("#fileProducto")[0].files[0];

            var Producto = {
                IdProducto: $("#txtIdProducto").val(),
                Nombre: $("#txtNombre").val(),
                Descripcion: $("#txtDescripcion").val(),
                oMarca: {
                    IdMarca: $("#cbMarca option:selected").val(),
                    Descripcion: $("#cbMarca option:selected").text()
                },
                oCategoria: {
                    IdCategoria: $("#cbCategoria option:selected").val(),
                    Descripcion: $("#cbCategoria option:selected").text()
                },
                PrecioTexto: $("#txtPrecio").val(),
                Precio: $("#txtPrecio").val(),
                Stock: $("#txtStock").val(),
                Activo: $("#checkActivo").val()
            }

            var request = new FormData();
            request.append("obj", JSON.stringify(Producto));
            request.append("archivo", imgSeleccionada);

            jQuery.ajax({
            url: '@Url.Action("GuardarProducto", "Producto")',
            type: "POST",
            data: request,
            processData: false,
            contentType: false,
            success: function (data) {

                if (data.exito) {
                    if (Producto.IdProducto == 0) { //CREAR
                        Producto.IdProducto = data.idproducto;
                        tabladata.row.add(Producto).draw(false);
                        $("#FormModal").modal("hide");
                        swal({
                            title: "Listo!",
                            text: "El Producto ha sido creado",
                            type: "success",
                            showConfirmButton: false,
                            timer: 1500
                        });
                    } else { //EDITAR
                        tabladata.row(fila).data(Producto).draw(false);
                        fila = null;
                        $("#FormModal").modal("hide");
                        swal({
                            title: "Listo!",
                            text: "El Producto ha sido editado",
                            type: "success",
                            showConfirmButton: false,
                            timer: 1500
                        });
                    }

                } else {
                    $("#msjeError").text(data.Mensaje);
                    $("#msjeError").show();
                    $(".modal-body").LoadingOverlay("hide");;
                }
            },
            error: function (error) {
                $(".modal-body").LoadingOverlay("hide");
                $("#msjeError").text("Ocurrió un Error !");
                $("#msjeError").show();
            },
            beforeSend: function () {
                $(".modal-body").LoadingOverlay("show", {
                    imageResizeFactor: 2,
                    text: "Cargando...",
                    size: 14
                });
            }
            });
        }

        function Delete(data) {
            swal({
                title: "¿Desea eliminar el producto?",
                text: data.Nombre,
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Aceptar",
                closeOnConfirm: false,
                cancelButtonClass: "btn-danger",
                cancelButtonText: "Cancelar",
                },
                function () {

                    jQuery.ajax({
                        url: '@Url.Action("EliminarProducto", "Producto")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IdProducto }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            if (data.resultado) {
                                tabladata.row(fila).remove().draw();
                                fila = null;
                                swal({
                                    title: "Listo!",
                                    text: "El producto ha sido eliminado",
                                    type: "success",
                                    showConfirmButton: false,
                                    timer: 1500
                                });
                            }
                            else {
                                swal({
                                    title: "Error!",
                                    text: data.Mensaje,
                                    type: "error",
                                    showConfirmButton: false,
                                    timer: 2500
                                });
                            }
                        },
                        error: function (error) {
                            swal({
                                title: "Error!",
                                text: "Ocurrió un error",
                                type: "error",
                                showConfirmButton: false,
                                timer: 2500
                            });
                        }
                    });
            });

        }

        jQuery.ajax({
            url: '@Url.Action("ListaMarca", "Marca")',
            type: "GET",
            data: null,
            dataType:"json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                $("<option>").attr({ "value": "0", "disabled":"true" }).text("Seleccionar").appendTo("#cbMarca");
                $.each(data.data, function (index, valor) {
                    $("<option>").attr({ "value": valor.IdMarca }).text(valor.Descripcion).appendTo("#cbMarca");
                });
            },
            error: function (error) {
                console.log(error);
            }
        });

        jQuery.ajax({
            url: '@Url.Action("ListaCategoria", "Categoria")',
            type: "GET",
            data: null,
            dataType:"json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                $("<option>").attr({ "value": "0", "disabled": "true" }).text("Seleccionar").appendTo("#cbCategoria");
                $.each(data.data, function (index, valor) {
                    $("<option>").attr({ "value": valor.IdCategoria }).text(valor.Descripcion).appendTo("#cbCategoria");
                });
            },
            error: function () {
                console.log(error);
            }
        });

        jQuery.validator.addMethod("precioDecimal", function (value, element) {
            return this.optional(element) || /^\d{0,4}(\.\d{0,2})?$/i.test(value);
        }, "-El formato del precio es ##.##");

        $("#contenedor").validate({
            rules: {
                nombre: { required: true },
                descripcion: { required: true },
                precio: { required: true, precioDecimal: true },
                stock: { required: true, number: true }
            },
            messages: {
                nombre: "-El nombre es obligatorio",
                descripcion: "-La descripción es obligatoria",
                precio: { required: "-El precio es obligatorio", precioDecimal: "-El formato del precio es ##.##" },
                stock: { required: "-El stock es obligatorio", number: "-El stock solo admite números" }
            },
            errorElement: "div",
            errorLabelContainer: ".alert-danger"
        })

    </script>
}
